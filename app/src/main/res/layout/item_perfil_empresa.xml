<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="9dp">

    <TextView
        android:id="@+id/txt_nome_item_perfil_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Nome:"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_cnpj_item_perfil_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="CNPJ:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_endereco_item_perfil_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="EndereÃ§o:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_email_item_perfil_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Email:"
        android:textAlignment="textStart"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/txt_telefone_item_perfil_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Telefone:"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_seguimento_item_perfil_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Seguimento:"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <Button
            android:id="@+id/btn_editar_item_perfil_empresa"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/Buttons"
            android:text="Editar Perfil"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>